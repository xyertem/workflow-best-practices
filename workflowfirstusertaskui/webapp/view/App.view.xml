<mvc:View controllerName="demo.workflow.dev.workflowfirstusertaskui.controller.App"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <App id="app">
    <pages>
            <Page
                xmlns="sap.m"
                id="pageId"
                title="Page Title"
                floatingFooter="true"
            >
                <content>
                    <sap.ui.layout.form:SimpleForm
                        editable="true"
                        layout="ResponsiveGridLayout"
                        xmlns:sap.ui.layout.form="sap.ui.layout.form"
                        xmlns:sap.ui.core="sap.ui.core"
                        id="form3"
                    >
                        <sap.ui.layout.form:content>
                            <Label
                                text="Name:"
                                width="100%"
                                id="label2"
                            />
                            <Input
                                width="100%"
                                id="textInput"
                                value="{/name}"
                            />
                            <Label
                                text="Surname:"
                                id="label0"
                            />
                            <Input
                                width="100%"
                                id="input0"
                                value="{/surname}"
                            />
                            <Label
                                text="Email:"
                                id="label1"
                            />
                            <Input
                                width="100%"
                                id="input2"
                                value="{/email}"
                            />
                        </sap.ui.layout.form:content>
                    </sap.ui.layout.form:SimpleForm>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
